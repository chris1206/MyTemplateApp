<?xml version="1.0" encoding="utf-8"?>
<!-- 矩形圆角+左右两边为一个圆弧 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:useLevel="true">

    <size
        android:width="60dp"
        android:height="60dp" />

    <solid android:color="#D8D8D8" />

    <!-- 圆角半径是高度的一半就是一个圆弧了 -->
    <corners android:radius="30dp" />

</shape>