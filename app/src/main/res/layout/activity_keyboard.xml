<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.yto.template.ui.KeyboardActivity">
    <include layout="@layout/title_bar_black" ></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="由于Android手机产商不同，回车键在不同手机上效果不同"
        android:textSize="18sp"
        android:textColor="#333333"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="普通"
        android:textSize="14sp"
        android:textColor="#333333"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/edit_bg_selector"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:enabled="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:hint="对应的提示文字"
        android:inputType="text"
        android:imeOptions="actionUnspecified"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="去往"
        android:textSize="14sp"
        android:textColor="#333333"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/edit_bg_selector"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:enabled="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:hint="对应的提示文字"
        android:inputType="text"
        android:imeOptions="actionGo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="搜索"
        android:textSize="14sp"
        android:textColor="#333333"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/edit_bg_selector"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:enabled="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:hint="对应的提示文字"
        android:inputType="text"
        android:imeOptions="actionSearch"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="发送"
        android:textSize="14sp"
        android:textColor="#333333"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/edit_bg_selector"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:enabled="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:hint="对应的提示文字"
        android:inputType="text"
        android:imeOptions="actionSend"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="下一个"
        android:textSize="14sp"
        android:textColor="#333333"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/edit_bg_selector"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:enabled="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:hint="对应的提示文字"
        android:inputType="text"
        android:imeOptions="actionNext"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="完成"
        android:textSize="14sp"
        android:textColor="#333333"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/edit_bg_selector"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:enabled="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:hint="对应的提示文字"
        android:inputType="text"
        android:imeOptions="actionDone"
        />
</LinearLayout>
