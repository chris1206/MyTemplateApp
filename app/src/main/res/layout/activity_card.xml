<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_color_lightgrey">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@null">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="9dp"
                    android:text="组件说明"
                    android:textSize="14sp"
                    android:textColor="@color/btn_normal" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="6dp"
                    android:textSize="12sp"
                    android:text="卡片类型较多，无常用样式，可根据实际需求自行添加"
                    android:textColor="@color/btn_selected" />

                <View
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:background="@color/transparent"
                    android:layout_height="1dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="9dp"
                android:textSize="14sp"
                android:text="卡片示例"
                android:textAppearance="@style/TextAppearance.AppCompat" />
            <RelativeLayout
                android:id="@+id/rela1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="0dp"
                android:paddingBottom="0dp"
                android:background="@drawable/bg_white_radius">
                <TextView
                    android:id="@+id/tv_waybillno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运单号：A2015122300001"
                    android:textSize="12sp"
                    android:textColor="@color/version"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"/>
                <TextView
                    android:id="@+id/tv_vehicle_sign_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车签号："
                    android:textSize="12sp"
                    android:layout_below="@id/tv_waybillno"
                    android:textColor="@color/version"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="14dp"
                    android:visibility="gone"/>
                <View
                    android:id="@+id/line11"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="invisible"
                    android:layout_below="@id/tv_vehicle_sign_no"/>

                <TextView
                    android:id="@+id/tv_dispatch_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="派车时间：2016-08-01 18:06"
                    android:textSize="12sp"
                    android:textColor="@color/version"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="14dp"
                    android:layout_below="@id/line11"/>
                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/lable_bg_status7"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"/>

                <RelativeLayout
                    android:layout_below="@id/tv_dispatch_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/line"
                        android:visibility="gone"/>

                    <RelativeLayout
                        android:id="@+id/rela_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp">

                        <TextView
                            android:id="@+id/tv_start_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上海"
                            android:drawableLeft="@mipmap/icon_green_oval"
                            android:drawablePadding="5dp"
                            android:textColor="@color/text"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:layout_marginLeft="12dp"/>
                        <View
                            android:id="@+id/start_line"
                            android:layout_width="20dp"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tv_start_address"
                            android:background="@color/line"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/tv_end_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="四川"
                            android:drawableLeft="@mipmap/icon_red_oval"
                            android:drawablePadding="5dp"
                            android:textColor="@color/text"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/start_line"
                            android:textSize="16sp"
                            android:layout_marginLeft="12dp"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_from_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预计发车时间：2016-08-02 08:00"
                        android:textColor="@color/text"
                        android:textSize="14sp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="14dp"
                        android:layout_below="@id/rela_start"
                        android:layout_alignBottom="@id/tv1"
                        android:layout_toRightOf="@id/tv1"/>

                    <TextView
                        android:id="@+id/tv_to_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预计到车时间：2016-08-02 22:00"
                        android:textColor="@color/text"
                        android:textSize="14sp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="9dp"
                        android:layout_below="@id/tv_from_time"
                        android:layout_alignBottom="@id/tv2"
                        android:layout_toRightOf="@id/tv2"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tv_scan"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_below="@id/tv_to_time"
                        android:background="@drawable/bg_orange_radius"
                        android:text="常规按钮"
                        android:textSize="16sp"
                        android:textColor="@color/text"
                        android:gravity="center"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv_scan"
                        android:layout_marginTop="14dp"
                        android:visibility="invisible"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="0dp"
                android:paddingBottom="0dp"
                android:background="@drawable/bg_white_radius">
                <TextView
                    android:id="@+id/tv_waybillno1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运单号：A2015122300001"
                    android:textSize="12sp"
                    android:textColor="@color/version"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"/>

                <View
                    android:id="@+id/line12"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="visible"
                    android:layout_below="@id/tv_waybillno1"/>

                <TextView
                    android:id="@+id/tv_dispatch_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="派车时间：2016-08-01 18:06"
                    android:textSize="12sp"
                    android:textColor="@color/version"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="14dp"
                    android:layout_below="@id/line12"/>
                <ImageView
                    android:id="@+id/iv_status2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/lable_bg_status2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"/>

                <RelativeLayout
                    android:layout_below="@id/tv_dispatch_time2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/line"
                        android:visibility="gone"/>

                    <RelativeLayout
                        android:id="@+id/rela_start2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp">

                        <TextView
                            android:id="@+id/tv_start_address2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上海青浦区华徐公路28号"
                            android:drawableLeft="@mipmap/icon_green_oval"
                            android:drawablePadding="5dp"
                            android:textColor="@color/text"
                            android:textSize="16sp"
                            android:layout_marginLeft="12dp"/>
                        <View
                            android:id="@+id/start_line2"
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="14dp"
                            android:background="@color/line"
                            android:layout_marginLeft="14dp"/>
                        <TextView
                            android:id="@+id/tv_end_address2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="四川成都市成华区城二仙桥东三路"
                            android:drawableLeft="@mipmap/icon_red_oval"
                            android:drawablePadding="5dp"
                            android:textColor="@color/text"
                            android:layout_below="@id/tv_start_address2"
                            android:layout_marginTop="30dp"
                            android:textSize="16sp"
                            android:layout_marginLeft="12dp"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_from_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预计发车时间 2016-08-02 08:00"
                        android:textColor="@color/text"
                        android:textSize="14sp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="14dp"
                        android:layout_below="@id/rela_start2"
                        android:layout_alignBottom="@id/tv1"
                        android:layout_toRightOf="@id/tv1"/>

                    <TextView
                        android:id="@+id/tv_to_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="司机信息 小张 13512345678"
                        android:textColor="@color/text"
                        android:textSize="14sp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="9dp"
                        android:layout_below="@id/tv_from_time2"
                        android:layout_alignBottom="@id/tv2"
                        android:layout_toRightOf="@id/tv2"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tv_vehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车牌 沪A12345"
                        android:textColor="@color/text"
                        android:textSize="14sp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="9dp"
                        android:layout_below="@id/tv_to_time2"
                        android:layout_alignBottom="@id/tv2"
                        android:visibility="visible"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv_vehicle"
                        android:layout_marginTop="14dp"
                        android:visibility="invisible"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/bg_white_radius">
                <TextView
                    android:id="@+id/tv_waybillno3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运单号 A2015122300001"
                    android:textSize="12sp"
                    android:textColor="@color/version"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"/>
                <TextView
                    android:id="@+id/tv_dispatch_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车牌号 2016-08-01 18:06"
                    android:textSize="12sp"
                    android:textColor="@color/version"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="14dp"
                    android:layout_below="@id/tv_waybillno3"/>
                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="异常类型 堵车/异常天气/缓行/绕行"
                    android:textSize="12sp"
                    android:textColor="@color/version"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="14dp"
                    android:layout_below="@id/tv_dispatch_time3"/>
                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="异常详情 在北青公路这里堵车了，前方有车祸"
                    android:textSize="12sp"
                    android:textColor="@color/version"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="14dp"
                    android:layout_below="@id/tv_4"/>
                <TextView
                    android:id="@+id/tv_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间 2017-03-28 14：20：41"
                    android:textSize="12sp"
                    android:textColor="@color/version"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="14dp"
                    android:layout_below="@id/tv_5"/>
                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间 2017-03-28 14：20：41"
                    android:textSize="12sp"
                    android:textColor="@color/version"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="14dp"
                    android:layout_below="@id/tv_6"/>
                <TextView
                    android:id="@+id/tv_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总计时长 14小时20分钟"
                    android:textSize="12sp"
                    android:textColor="@color/version"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="14dp"
                    android:layout_below="@id/tv_7"/>

                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_below="@id/tv_8"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/timeline_img_default"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/timeline_img_default"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@mipmap/timeline_img_default"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上海市青浦区华徐公路3029弄"
                    android:drawableLeft="@mipmap/icon_geo"
                    android:layout_below="@id/ll_1"
                    android:drawablePadding="5dp"
                    android:textColor="@color/version"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_9"
                    android:layout_marginTop="14dp"
                    android:visibility="invisible"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>