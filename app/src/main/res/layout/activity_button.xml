<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color_lightgrey">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingBottom="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@null">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="9dp"
                    android:text="组件说明"
                    android:textColor="@color/btn_normal" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="6dp"
                    android:textSize="12sp"
                    android:text="常规按钮：置于页面中间（宽度视页面内容而定）\n全局按钮：置于页面底部，作为全局操作\n事件按钮：固定在事件栏右侧，只在对应状态出现\n幽灵按钮：通常用于辅助操作，视情况，可经由特殊事件触发后显示按钮组，同类型不同选项"
                    android:textColor="@color/btn_selected" />

                <View
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:background="@color/transparent"
                    android:layout_height="1dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="9dp"
                android:textSize="14sp"
                android:text="常规标签栏"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:text="主要按钮"
                android:textColor="@color/black"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/ripple_with_selector"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:background="@drawable/ripple_touch_bg"
                android:text="主要按钮"
                android:clickable="true"
                android:textColor="@color/black"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:clickable="true"
                android:background="@drawable/ripple_touch_bg"
                android:gravity="center">
                <ProgressBar
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:indeterminate="true"
                    android:indeterminateDrawable="@drawable/indeterminate_drawable"
                    android:indeterminateDuration="1000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="加载按钮"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:clickable="true"
                android:background="@drawable/ripple_touch_bg"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/camera"
                    android:text="图标按钮"
                    android:clickable="true"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:background="@drawable/btn_normal_solid"
                android:text="常规按钮"
                android:clickable="true"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:background="@drawable/btn_disable"
                android:text="禁用按钮"
                android:clickable="false"
                android:enabled="true"
                android:textColor="@color/text_hint"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:text="全局按钮"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="全局按钮"
                android:textColor="@color/black"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/ripple_with_selector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:text="事件按钮"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文字按钮"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:30:20"
                    android:layout_below="@id/tv1"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="13dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:text="结束事件"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/ripple_with_selector"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:text="辅助按钮"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@null">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/ripple_touch_bg"
                    android:text="文字按钮"
                    android:textColor="@color/black"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ripple_touch_bg"
                    android:text="幽灵按钮"
                    android:textColor="@color/stroke"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_disable"
                    android:text="禁用按钮"
                    android:textColor="@color/text_hint"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@null">

                <LinearLayout
                    android:layout_width="118dp"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/ripple_touch_bg"
                    android:gravity="center">
                    <ProgressBar
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:indeterminate="true"
                        android:indeterminateDrawable="@drawable/indeterminate_drawable"
                        android:indeterminateDuration="1000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="加载按钮"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="118dp"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/ripple_touch_bg"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/camera"
                        android:text="图标按钮"
                        android:clickable="true"
                        android:drawablePadding="8dp"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/btn_normal_solid"
                    android:text="辅助按钮"
                    android:textColor="@color/black"
                    android:gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:text="按钮组"
                android:textAppearance="@style/TextAppearance.AppCompat" />
            <GridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_above="@id/tv_cancel"
                android:layout_marginTop="14dp"
                android:background="@color/common_bg_color_lightgrey"
                android:columnWidth="90dp"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="1dp"
                android:gravity="center"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:layout_marginBottom="14dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>